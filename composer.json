{
  "name": "spiral/application",
  "description": "Spiral Application",
  "license": "MIT",
  "authors": [
    {
      "name": "Wolfy-J",
      "email": "wolfy.jd@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.0",
    "spiral/framework": "^0.9.0",
    "spiral/profiler": "^0.9.0",
    "spiral/ide-helper": "^0.9.2",
    "spiral/toolkit": "^0.9.10"
  },
  "require-dev": {
    "phpunit/phpunit": "~6.0"
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.sample', '.env');\""
    ],
    "post-install-cmd": [
      "php webroot/index.php configure -vv",
      "php webroot/index.php app:key"
    ]
  },
  "autoload": {
    "psr-4": {
      "": "app/classes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": [
        "tests/"
      ]
    }
  }
}
